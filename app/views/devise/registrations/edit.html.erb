<h2>編集 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, 'メールアドレス' %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, '新しいパスワード' %> <i>（変更が必要ない場合は空白）</i><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label :password_confirmation, '新しいパスワード（確認用）' %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :current_password, '現在のパスワード' %> <i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit "更新" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
